# MQTT broker connection
MQTT_HOST=192.168.1.10
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Topic prefix the HA integration will subscribe to (default "seneye")
MQTT_PREFIX=seneye

# Polling interval in seconds
INTERVAL=300

# Optional: explicit hidraw path if detection fails (e.g. /dev/hidraw0)
HIDRAW_PATH=
